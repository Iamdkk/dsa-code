void alphaHill(int n) {
    for(int i=0;i<n;i++)
	{
		//spaces
		for(int j=0;j<n-i-1;j++)
		{
		cout<<" ";
		}
		//alphabets
        char ch='A';
        int bp=(2*i+1)/2;
		for(int j=1;j<=2*i+1;j++)
		{
		cout<< ch<<" ";
		if(j<= bp) ch++;
        else ch--;
		}
		//spaces
		for(int j=0;j<n-i-1;j++)
		{
		cout<<" ";
		}
		cout<<endl;
	}
}
